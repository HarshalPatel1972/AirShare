{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AirShare",
  "version": "0.1.0",
  "identifier": "com.harshal-patel.airshare",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "AirShare - Dashboard",
        "width": 1000,
        "height": 700,
        "transparent": true,
        "decorations": true,
        "alwaysOnTop": false,
        "maximized": false,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
